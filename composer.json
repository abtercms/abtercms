{
  "name": "abtercms/abterphp",
  "description": "PHP implementation of AbterCMS, based on the Opulence framework",
  "keywords": [
    "PHP",
    "CMS",
    "contact form",
    "file management"
  ],
  "authors": [
    {
      "name": "Peter Aba",
      "email": "peter@peteraba.com",
      "role": "Engineer"
    }
  ],
  "type": "project",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "suggest": {
    "ext-redis": "Allows better caching"
  },
  "config": {
    "prefer-install": "dist"
  },
  "require": {
    "php": "^8.0",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-tokenizer": "*",
    "monolog/monolog": "^2.2",
    "opulence/opulence": "^1.2",
    "filp/whoops": "^2.12",
    "league/flysystem": "^2.0",
    "cocur/slugify": "^4.0",
    "casbin/casbin": "^3.2",
    "casbin/database-adapter": "^1.4",
    "matthiasmullie/minify": "^1.3",
    "swiftmailer/swiftmailer": "^6.2",
    "mikey179/vfsstream": "^1.6",
    "bjeavons/zxcvbn-php": "^1.2",
    "dflydev/apache-mime-types": "^1.0",
    "psr/http-message": "^1.0",
    "league/oauth2-server": "^8.2",
    "nyholm/psr7": "^1.4",
    "nyholm/psr7-server": "^1.0.0",
    "hackzilla/password-generator": "^1.6",
    "nilportugues/sql-query-builder": "^1.8",
    "abterphp/qb": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6",
    "phpmd/phpmd": "^2.10",
    "friendsofphp/php-cs-fixer": "^2.19",
    "phan/phan": "^4.0"
  },
  "replace": {
    "abterphp/framework": "self.version",
    "abterphp/admin": "self.version",
    "abterphp/website": "self.version",
    "abterphp/propeller-admin": "self.version",
    "abterphp/bootstrap4-website": "self.version",
    "abterphp/files": "self.version",
    "abterphp/contact": "self.version"
  },
  "autoload": {
    "psr-4": {
      "AbterPhp\\": [
        "src"
      ]
    }
  }
}
