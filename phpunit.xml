<phpunit
        bootstrap="vendor/autoload.php"
        colors="true">
    <testsuite name="AbterPHP">
        <testsuite name="unit">
            <directory>tests/unit</directory>
        </testsuite>
        <testsuite name="integration">
            <directory>tests/integration</directory>
        </testsuite>
    </testsuite>
    <php>
        <env name="ENV_NAME" value="testing"/>
        <env name="ENCRYPTION_KEY" value="74a64db2018d928d351d7bdd257c410efa938a010bc32bcd789155fd8cd75eb9"/>
        <env name="SESSION_HANDLER" value="Opulence\Sessions\Handlers\ArraySessionHandler"/>
        <env name="VIEW_CACHE" value="Opulence\Views\Caching\ArrayCache"/>
        <env name="DB_HOST" value="db_test"/>
        <env name="DB_USER" value="abter_test"/>
        <env name="DB_NAME" value="abter_test"/>
        <env name="DB_PASSWORD" value="abter_test"/>
        <env name="DB_PORT" value="3306"/>
    </php>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
            <exclude>
                <directory suffix=".php">./src/*/Bootstrappers</directory>
                <directory suffix=".php">./src/*/Console/Commands</directory>
                <directory suffix="routes.php">./src/*</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./tmp/report" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="clover.xml"/>
    </logging>
</phpunit>
